<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_16">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_4"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_14"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvPrice"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/name_example" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_4"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_14"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/price_example" />

    <TextView
        android:id="@+id/tvFullName"
        android:layout_width="0dp"
        android:paddingEnd="@dimen/dp_16"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvChanges"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        tools:text="@string/full_name_example" />

    <TextView
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_12"
        tools:text="@string/changes_example"
        android:id="@+id/tvChanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPrice" />
</androidx.constraintlayout.widget.ConstraintLayout>